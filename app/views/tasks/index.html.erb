<h1>Tasks</h1>

<table>
 <tr>
   <th>Name</th>
 </tr>
 <tbody>
   <% @tasks.each do |task| %>
     <tr>
       <td><%= task.title %></td>
       <% if task.completed %>
          <td><input type="checkbox" checked ></td>
       <% else %>
          <td><input type="checkbox"></td>
       <% end %>
       <td><%= link_to 'Show', task_path(task) %></td>
     </tr>
   <% end %>
 </tbody>
</table>
